<Window x:Class="Konyvtar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Olvasó Regisztráció" Height="540" Width="520">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Margin="0,5">
			<Label Content="Név:" Width="120"/>
			<TextBox Name="tbNev" Width="250"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5">
			<Label Content="Életkor:" Width="120"/>
			<TextBox Name="tbEletkor" Width="50"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,5">
			<Label Content="Kedvenc műfaj:" Width="120"/>
			<ComboBox Name="cbMufaj" Width="150">
				<ComboBoxItem Content="Regény"/>
				<ComboBoxItem Content="Sci-fi"/>
				<ComboBoxItem Content="Fantasy"/>
				<ComboBoxItem Content="Ismeretterjesztő"/>
				<ComboBoxItem Content="Mese"/>
			</ComboBox>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,5">
			<CheckBox Name="cbHirlevel" Content="Hírlevél" Margin="0,0,20,0"/>
			<CheckBox Name="cbSms" Content="SMS értesítés"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,5">
			<Label Content="Tagsági típus:" Width="120"/>
			<RadioButton Name="rbNormal" Content="Normál" GroupName="Tagsag" IsChecked="True"/>
			<RadioButton Name="rbDiak" Content="Diák" GroupName="Tagsag" Margin="10,0"/>
			<RadioButton Name="rbNyugdijas" Content="Nyugdíjas" GroupName="Tagsag" Margin="10,0"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="5" Margin="0,10">
			<Button Name="btnMent" Content="Mentés" Width="100" Height="30" Margin="0,0,10,0" Click="btnMent_Click"/>
			<Button Name="btnTorol" Content="Törlés" Width="100" Height="30" Click="btnTorol_Click"/>
		</StackPanel>

		<TextBlock Grid.Row="6" Name="tbUzenet" Foreground="Green" Margin="0,5"/>

		<ListBox Grid.Row="7" Name="lbOlvasok" Height="200"/>
	</Grid>
</Window>
